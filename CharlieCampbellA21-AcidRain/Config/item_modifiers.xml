<configs>

<!-- SET VARIABLES --> 	
<!-- (I recommend not changing any values in this particular file). -->
<!-- (If you'd like to change any values associated with these armour mods, do so in the 'buffs' file, 'Customisable Variables' section). -->

	<append xpath="/item_modifiers/item_modifier[@name='modArmorBallCap']">
		<effect_group tiered="false">
			<triggered_effect trigger="onSelfEquipStart" action="ModifyCVar" target="self" cvar="varCPCWPTransferModBallCap" operation="set" value="@varCPCWPModBallCap"/>
			<triggered_effect trigger="onSelfEquipStop" action="ModifyCVar" target="self" cvar="varCPCWPTransferModBallCap" operation="set" value="0"/>
			<triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
			<triggered_effect trigger="onSelfEquipStop" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
		</effect_group>
	</append>

	<append xpath="/item_modifiers/item_modifier[@name='modArmorSkullCap']">
		<effect_group tiered="false">
			<triggered_effect trigger="onSelfEquipStart" action="ModifyCVar" target="self" cvar="varCPCWPTransferModSkullCap" operation="set" value="@varCPCWPModSkullCap"/>
			<triggered_effect trigger="onSelfEquipStop" action="ModifyCVar" target="self" cvar="varCPCWPTransferModSkullCap" operation="set" value="0"/>
			<triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
			<triggered_effect trigger="onSelfEquipStop" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
		</effect_group>
	</append>
	
	<append xpath="/item_modifiers/item_modifier[@name='modArmorCowboyHat']">
		<effect_group tiered="false">
			<triggered_effect trigger="onSelfEquipStart" action="ModifyCVar" target="self" cvar="varCPCWPTransferModCowboyHat" operation="set" value="@varCPCWPModCowboyHat"/>
			<triggered_effect trigger="onSelfEquipStop" action="ModifyCVar" target="self" cvar="varCPCWPTransferModCowboyHat" operation="set" value="0"/>
			<triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
			<triggered_effect trigger="onSelfEquipStop" action="AddBuff" buff="buffCPCUpdatingWaterproofness"/>
		</effect_group>
	</append>

</configs>